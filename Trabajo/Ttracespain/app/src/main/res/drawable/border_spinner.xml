<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke
                        android:width="2dp"
                        android:color="#888181" />
                    <corners
                        android:radius="10dp" />
                    <padding android:left="10dp"
                        android:top="5dp"
                        android:right="10dp"
                        android:bottom="5dp"/>
                </shape>
            </item>
            <item android:top="3dp">
                <bitmap android:src="@drawable/ic_expand_more"
                    android:gravity="top|right" />
            </item>
        </layer-list>
    </item>
</selector>